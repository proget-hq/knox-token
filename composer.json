{
    "name": "proget-hq/knox-token",
    "description": "Support library for signing Samsung Knox API access tokens",
    "type": "library",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "firebase/php-jwt": "^5.0",
        "ramsey/uuid": "^3.8 || ^4.0"
    },
    "require-dev": {
        "phpseclib/phpseclib": "^2.0 || ^3.0",
        "phpunit/phpunit": "^9.3",
        "friendsofphp/php-cs-fixer": "^3.11",
        "phpstan/phpstan": "^1.8.6",
        "phpstan/phpstan-phpunit": "^1.1"
    },
    "suggest": {
        "phpseclib/phpseclib": "To use KnoxEncryptionUtility class"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Arkadiusz Kondas",
            "email": "arkadiusz.kondas@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Proget\\Samsung\\KnoxToken\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Proget\\Tests\\Samsung\\KnoxToken\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4.30"
        }
    },
    "scripts": {
        "check-cs": "php-cs-fixer fix --dry-run",
        "fix-cs": "php-cs-fixer fix",
        "sca": "phpstan analyse",
        "tests": "phpunit",
        "ci": [
            "@check-cs",
            "@sca",
            "@tests"
        ]
    }
}
